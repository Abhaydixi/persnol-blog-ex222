<%- include('../../header.ejs')  %>

<br><br><br>

<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <!--sidebar-->
                <div class="col-md-3">
                    <div class="dash-left">
                        <ul >
                            <li class="active ">
                                <a href="/admin/dashboard" class="text-decoration-none">Dashboard</a>
                            </li>
                            <li class="active">
                                <a href="/admin/blogdisplay" class="text-decoration-none">Display Blog</a>
                            </li>
                            <li class="active">
                                <a href="/admin/category" class="text-decoration-none">Categories</a>
                            </li>
                            <li class="active">
                                <a href="/admin/contact" class="text-decoration-none">Contact</a>
                            </li>
                            <li class="active">
                                <a href="/admin/about" class="text-decoration-none">About</a>
                            </li>
                            <li class="active">
                                <a href="/logout" class="text-decoration-none">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                            <div class="dash-title">
                                <h1 style="color: #386576;">Blogs</h1>
                            </div>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                Add Blog
                              </button>
                        </div>
                        <table class="table-bordered table-striped">
                            <tbody>
                                <tr class=" table_heading text-white text-center">
                                    <th>ID No.</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Image</th>
                                    <th>Action</th>
                                </tr>
                                <% d.forEach((item)=>{ %>
                                    <tr>
                                        <td><%= item._id %></td>                                          
                                        
                                        <td><%= item.title %></td>
                                           
                                        <td><%= item.description %></td>

                                        <td><img src="<%= item.image.url %>" width="50px" alt=""></td>
                                           
                                       
                                        <td>
                                            <a href="/admin/blogview/<%= item._id %>" class="btn btn-info btn-sm action-btn">
                                                <i class="fa-solid fa-eye"></i>
                                            </a>

                                            <a  href="/admin/blogedit/<%= item._id %>" class="btn btn-info btn-sm action-btn">
                                                <i class="fa-regular fa-pen-to-square"> </i>
                                            </a><br>
                                            
                                            <a href="/admin/blogdelete/<%= item._id %>" class="btn btn-info"
                                                ><i class="fa-solid fa-trash"></i
                                              ></a>
                                        </td>
                                    </tr>

                                <% }) %>
                               
                               
                                
                            </tbody>
                        </table>
                    </div>
                    
                </div>
            </div><!--row end-->
        </div>
    </div><!--container end-->
</section>

<!-- model blog creat -->


  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Add Blog</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form action="/insertblog" method="post" enctype="multipart/form-data">
                <div class="md-3">
                    <label for=""> Title</label>
                    <input type="text" name="title" class="form-control">
                </div>
                <div class="md-3">
                    <label for=""> Disscription</label>
                    <textarea type="text" name="discription" class="form-control"></textarea>
                </div>
                <div class="md-3">
                    <label for=""> Upload image</label>
                    <input type="file" name="image" class="form-control">
                </div><br>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          
        </div>
        
      </div>
    </div>
  </div>




<%- include('../../footer.ejs') %>