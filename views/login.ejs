<%- include('header.ejs') %>


    <section class="login-wrap">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 " style="margin-top: 70px;">
                    <div class="login-box ">
                        <h1 class="ad">
                            <span style="color:orange;">ADMIN</span> LOGIN
                        </h1>
                        <% if(message.length> 0){ %>
                            <div class="alert alert-danger">
                                <%= message %>
                            </div>
                            <% } %>
                                <p class="text-center text-white">GREAT TO HAVE YOU BACK</p>
                                <form action="/verifylogin" method="post" class="pt-4">
                                    <div class="form-group log mb-4">
                                        <input type="email" name="email" class="form-control"
                                            placeholder="Email or username">
                                    </div>
                                    <div class="form-group log mb-4">
                                        <input type="password" name="password" class="form-control"
                                            placeholder="password">
                                    </div>
                                    <div class="form-group text-center">
                                        <button type="submit" class="btn btn-lg btn-block form-control"
                                            style="background: #12587a; color:#ffff;">Log In</button>
                                        <br>
                                        <div class="mt-4">
                                            <span class=" mb-5 pb-lg-2 text-white">DON`T HAVE AN ACCOUNT?</span>
                                            <a href="/register" style="color: #393f81;">REGISTER NOW</a>
                                            <br>
                                            <a href="" style="color: #393f81;" class="pt-3">FORGOT PASSWORD</a>
                                        </div>

                                    </div>
                                </form>
                    </div>
                </div>
            </div><!--row end-->
        </div><!--container end-->
    </section>




    <%- include('footer.ejs') %>