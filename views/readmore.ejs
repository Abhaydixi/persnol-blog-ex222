<%- include('./header.ejs') %>
    <br><br><br>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="dt mt-5 mb-3">
                    <%= d.title %>
                </h1>
                <p>Posted On <span>
                        <%= d.createdAt.toLocaleDateString() %>
                    </span></p>
                <img src="<%= d.image.url %>" class="w-100 shadow-lg" />
                <p class="mo mt-3">
                    <%=d.description %>
                </p>
            </div>
            <div class="col-md-6">
                <h5 class="bg-info text-center text-white mt-5  py-2 px-3">Recent Blogs</h5><br>
                <div class="row ">
                    <% r.forEach((recentitem)=>{ %>
                        <div class="col-md-4 mt-3">
                            <img src="<%- recentitem.image.url %>" class="recentitem-image w-100" /><br>
                        </div>
                        <div class="col-md-8">
                            <h5 class="mt-3">
                                <%= recentitem.title %>
                            </h5>
                            <p>
                                <%= recentitem.createdAt.toLocaleDateString() %>
                            </p>
                        </div>

                        <% }) %>
                </div>


            </div>
        </div>
    </div>


<br>


    <%- include('./footer.ejs') %>