<%- include('header.ejs') %>

    <br><br><br>
    <section class="featured-blog mtb-40">
        <div class="container">
            <div class="row">
                <h1 class="text-center mb-5" style="color: #386576;">BLOGS</h1>
                <% b.forEach((item)=>{ %>
                    <div class="col-md-4">
                        <div class="blog-box">
                            <img src="<%= item.image.url %>" width="350px" height="250px">
                            <h3>
                                <%= item.title %>
                            </h3>
                            <p><span>
                                    <%= item.createdAt.toLocaleDateString() %>
                                </span></p>
                            <p>
                                <%= item.description.slice(0,10) %>
                            </p>
                            <a href="/readmore/<%- item.id %>" class="btn btn-info mt-3">Read more...</a>
                        </div>
                    </div>
                    <% }) %>
            </div><!--row end-->
        </div><!--container end-->
    </section>



    <%- include('footer.ejs') %>