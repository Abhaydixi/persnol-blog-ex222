<%- include('./header.ejs') %>
    <br>

    <section class="login-wrap">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 mb-5">
                    <div class="login-box">
                        <h1 class="ad">
                            <span style="color:orange;">REGISTER</span> HERE
                        </h1>
                        <% if(message.length> 0){ %>
                            <div class="alert alert-danger">
                                <%= message %>
                            </div>
                            <% } %>
                                <!-- <p class="text-center text-white">GREAT TO HAVE YOU BACK</p> -->
                                <form action="/adminregister" method="post" class="pt-4">
                                    <div class="form-group log mb-4">
                                        <input type="text" name="name" class="form-control" placeholder="name">
                                    </div>

                                    <div class="form-group log mb-4">
                                        <input type="email" name="email" class="form-control" placeholder="email">
                                    </div>
                                    <div class="form-group log mb-4">
                                        <input type="number" name="phone" class="form-control" placeholder="phone">
                                    </div>
                                    <div class="form-group log mb-4">
                                        <input type="password" name="password" class="form-control"
                                            placeholder="password">
                                    </div>
                                    <div class="form-group log mb-4">
                                        <input type="password" name="confirm_password" class="form-control"
                                            placeholder="confirm_password">
                                    </div>
                                    <!-- <input type="checkbox" onclick="myFunction()">
                            <span class="text-white"> Show Password</span>

                            <div class="form-group my-2">
                                <label class="form-label text-white">Profile Picture</label>
                                <input type="file" name="profile_image" class="form-control" required>
                            </div>
                            <br> -->
                                    <div class="form-group text-center">
                                        <button type="submit" class="btn btn-lg btn-block form-control"
                                            style="background: #12587a; color:#ffff;">Register Now</button>
                                        <br>
                                        <div class="mt-4">
                                            <span class=" mb-5 pb-lg-2 text-white"> HAVE AN ACCOUNT?</span>
                                            <a href="/login" style="color: orange;">LOGIN NOW</a>
                                            <br>
                                            <a href="" style="color: orange;" class="pt-3">FORGOT PASSWORD</a>
                                        </div>

                                    </div>
                                </form>
                    </div>
                </div>
            </div><!--row end-->
        </div><!--container end-->
    </section>



